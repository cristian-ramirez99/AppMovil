<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_theme"
    tools:context=".autenticado.fragments.CarritoFragment">

    <TextView
        android:id="@+id/tvMensajeCarritoVacio"
        android:layout_width="334dp"
        android:layout_height="108dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="52dp"
        android:text="@string/carrito_vacio"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivCarritoCarritoVacio" />

    <ImageView
        android:id="@+id/ivCarritoCarritoVacio"
        android:layout_width="189dp"
        android:layout_height="129dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="152dp"
        app:tint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_carrito" />

</androidx.constraintlayout.widget.ConstraintLayout>